{
  "source": {
    "include": ["src"],
    "includePattern": ".+\\.(js|mjs)$",
    "excludePattern": "(node_modules/|docs)"
  },
  "plugins": ["plugins/markdown"],
  "opts": {
    "destination": "./docs/",
    "recurse": true,
    "readme": "./README.md",
    "template": "templates/default"
  },
  "templates": {
    "cleverLinks": true,
    "monospaceLinks": true,
    "default": {
      "outputSourceFiles": true,
      "includeDate": false
    }
  },
  "markdown": {
    "hardwrap": false,
    "idInHeadings": true
  },
  "typescript": {
    "enabled": true,
    "moduleRoot": "src",
    "includeDeclarations": true
  }
}
